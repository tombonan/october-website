<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>Tom & Vera</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: 'Playfair Display', Georgia, serif;
        color: #2c2c2c;
        background-color: #fdf7ea;
      }

      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
        text-align: center;
      }

      .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 600px;
      }

      .image-frame {
        width: 50vw;
        height: 35vw;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 3rem;
      }

      .image-frame img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .names {
        font-size: 4rem;
        font-weight: 400;
        font-style: italic;
        letter-spacing: 0.02em;
      }

      .detail {
        font-size: 1.1rem;
        font-weight: 100;
        font-style: italic;
        letter-spacing: 0.02em;
      }

      .detail.above {
        margin-bottom: 2rem;
      }

      @media (max-width: 480px) {
        .image-frame {
          width: 68vw;
          height: 47.5vw;
        }

        .names {
          font-size: 4rem;
        }
      }
    </style>
  </head>
  <body>
    <main class="hero">
      <p class="detail above">October 02, 2026</p>
      <div class="image-frame">
        <img src="/florals.jpg" alt="Floral arrangement" />
      </div>
      <h1 class="names">Tom&mdash;Vera</h1>
      <p class="detail">Santa Barbara, California</p>
    </main>
  </body>
</html>
